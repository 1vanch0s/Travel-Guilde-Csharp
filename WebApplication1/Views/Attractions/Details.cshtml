@model WebApplication1.Models.Attraction

@{
    ViewData["Title"] = @Model.Name;
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.PhotoPath" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <p><strong>Город:</strong> @Model.City.Name</p>
        <p><strong>Описание:</strong> @Model.Description</p>
        <p><strong>История:</strong> @Model.History</p>
        <p><strong>Часы работы:</strong> @Model.OperatingHours</p>
        <p><strong>Стоимость:</strong> @Model.Cost</p>
    </div>
</div>

<a asp-controller="Cities" asp-action="Details" asp-route-id="@Model.CityId" class="btn btn-secondary">Назад к городу</a>